datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PerformanceMetric {
  createdAt    DateTime  @default(now())
  dateRecorded DateTime?
  id           String    @id @default(cuid())
  metricName   String?
  relatedFund  String?
  updatedAt    DateTime  @updatedAt
  value        Float?
}

